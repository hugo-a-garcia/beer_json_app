{
  "$id": "https://example.com/arrays.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "List of beers in a bar",
  "type": "object",
  "properties": {
    "beers": {
      "type": "array",
      "items": { "$ref": "#/$defs/beer" }
    }
  },
  "$defs": {
    "beer": {
      "type": "object",
      "required": ["beer_name","beer_id","guide_style_id"],
      "properties": {
        "beer_name": {
          "description": "The name of the beer",
          "type": "string"
        },
        "beer_id": {
          "description": "The beer id in Belgina Beer",
          "type": "string"
        },
        "guide_style_id": {
          "description": "The style id of beer in the BCJP",
          "type": "string"
        },
        "ebc_color": {
          "description": "EBC color",
          "type": "integer"  
        }
      }
    }
  }
}
